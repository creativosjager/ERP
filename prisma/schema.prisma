generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TALLER
  REPORTES
}

enum WorkOrderType {
  GARANTIA
  COBRO
}

enum WorkOrderStatus {
  RECIBIDA
  DIAGNOSTICO
  EN_REPARACION
  LISTA
  ENTREGADA
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(TALLER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        String   @id @default(cuid())
  fullName  String
  phone     String
  email     String?
  city      String?
  address   String?
  docId     String?
  notes     String?
  scooters  Scooter[]
  workOrders WorkOrder[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([fullName])
}

model Scooter {
  id         String   @id @default(cuid())
  model      String
  serial     String?  @unique
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  workOrders WorkOrder[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([customerId])
}

model Part {
  id        String   @id @default(cuid())
  sku       String   @unique
  name      String
  category  String?
  stock     Int      @default(0)
  minStock  Int      @default(0)
  costCOP   Float?
  priceCOP  Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model WorkOrder {
  id         String          @id @default(cuid())
  code       String          @unique
  type       WorkOrderType   @default(COBRO)
  status     WorkOrderStatus @default(RECIBIDA)

  customerId String
  customer   Customer        @relation(fields: [customerId], references: [id], onDelete: Restrict)

  scooterId  String?
  scooter    Scooter?        @relation(fields: [scooterId], references: [id], onDelete: SetNull)

  issue      String?
  diagnosis  String?
  notes      String?

  laborCOP   Float?
  totalCOP   Float?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([customerId])
  @@index([scooterId])
  @@index([status])
}